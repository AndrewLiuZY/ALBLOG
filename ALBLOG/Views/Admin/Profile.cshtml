
@{
    ViewData["Title"] = "ChangeProfile";
    Layout = "_SettingsLayout";
}
<div>
    <strong>ChangeProfilePhoto</strong>
    <div>
        <img src="~/images/defaultProfile.png" width="300" class="margin-top-15" id="ImgPreProfile" alt="Please upload a image file" />
        <form action="/admin/UpLoad" enctype="multipart/form-data" class="form-inline row margin-top-15" id="frmUpLoadProfileImg" method="post">
            <input type="file" name="img" id="inputProfilePhoto" class="hidden" accept="image/gif,image/jpeg,image/jpg,image/png,image/svg" />
            <button type="button" class="btn-link col-md-1 " id="btnUpLoadPhoto">upload</button>
            <button type="button" class="hidden btn-link col-md-1 " id="btnPreviewPhoto">Preview</button>
            <button type="button" class="hidden btn-link col-md-1 " id="btnSavePhoto">Save</button>
        </form>
    </div>
</div>
<hr />
<div>
    <div>
        <span class="form-group">
            <label>ChangeProfile</label>
            <button class="btn btn-link float-right" style="text-align:right" id="btnSaveProfile">Save</button>
            <button class="btn btn-link float-right" style="text-align:right" id="btnRecallProfile">Recall</button>
        </span>
    </div>
    <div class="margin-top-10" id="editor">
        @Html.Raw(ViewData["context"])
    </div>
    <div>
        <div class="margin-top-10" id="previewBox">
        </div>
    </div>
</div>
<style>
    #Myself {
        visibility: visible !important
    }
</style>


