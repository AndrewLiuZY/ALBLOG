
@{
    ViewData["Title"] = "Image";
    Layout = "_SettingsLayout";
}
<h4>Image Manage</h4>
<hr />
<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>image</th>
                <th>url</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var img in ViewData["files"] as List<string>)
            {
                <tr class="">
                    <td class="col-md-3">
                        <img class="btn btn-block" src="@img" onclick="showModal('@img.Replace(@"\","/")')" style="height:50px;max-width:70px" title="@img" />
                    </td>
                    <td class="col-md-8">
                        @img.Replace(@"\", "/")
                    </td>
                    <td class="col-md-1">
                        <div class="btn btn-danger" onclick="DeleteImage('@img.Replace("/"," ").Replace(@"\"," ")')">
                            删除
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    document.getElementById("navImage").classList.add("active");
</script>


