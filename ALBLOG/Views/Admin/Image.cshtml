
@{
    ViewData["Title"] = "Image";
    Layout = "_SettingsLayout";
}
<h4>Image Manage</h4>
<hr />
<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>image</th>
                <th>url</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var img in ViewData["files"] as List<string>)
            {
                <tr class="">
                    <td class="col-md-3">
                        <img class="btn btn-block" src="@img" onclick="showModal('@img.Replace(@"\","/")')" style="height:50px;max-width:70px" title="@img" />
                    </td>
                    <td class="col-md-5">
                        @img.Replace(@"\", "/")
                    </td>
                    <td class="col-md-2">
                        <div class="btn btn-default">
                            删除
                        </div>
                    </td>
                    <td class="col-md-2">
                        <div class="btn btn-danger">
                            删除
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade text-center" id="modalImg" role="dialog">
    <img id="imgModal" src="" alt="图片获取失败" style="max-width:1000px" />
</div>
