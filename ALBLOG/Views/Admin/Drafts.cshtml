@model ALBLOG.Domain.Model.Page
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Draft Box";
}

<h2>Drafts</h2>
<a href="~/admin/">Go back</a>
<hr />
@Html.DisplayForModel()
<div class="padding-8">
    <span>
        第 @Model.Index 页，
    </span>
    <span>
        共 @Model.PageCount 页
    </span>
    @if (Model.HaveLast)
    {
        <span>
            <a href="~/admin/draft?index=@(Model.Index-1)">
                上一页
            </a>
        </span>
    }
    @if (Model.HaveNext)
    {
        <span>
            <a href="~/admin/draft?index=@(Model.Index+1)">
                下一页
            </a>
        </span>
    }
</div>
