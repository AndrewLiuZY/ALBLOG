@model ALBLOG.Domain.Model.Page

<div>
    @foreach (var item in Model.Posts)
    {
        <div>
            <div style="font-size:25px">
                <a style="color:black" href="~/post/@item.Id">
                    <h3 style="margin-top:10px;margin-bottom:5px">
                        @item.Title
                    </h3>
                </a>
            </div>
            <div>
                <h4 style="margin-bottom:5px;margin-top:5px"><small>@item.Date.AddHours(8).ToString("yyyy/M/d H:mm:ss")</small></h4>
            </div>
            <div>
                @(item.Context.ReplaceLabel("").TakeString(150)+"... ") 
                <a class="btn-default" style="color:grey" href="~/post/@item.Id"> 阅读全文</a>
            </div>
            <div>
                @foreach (var tag in item.Tags ?? new List<string>())
                {
                    <span class="label label-default" style="display:inline-block">
                        <a style="color:white" href="~/tag/@tag">@tag </a>
                    </span>
                }
            </div>
        </div>
        <hr style="margin-top:10px;margin-bottom:10px;height:1px">
    }
</div>
