@model ALBLOG.Domain.Model.Page
@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "首页";
}
<div>
    <h1> 所有文章 <small>all posts</small> </h1>
    <hr />
    @Html.DisplayForModel()
    <div>
        <span>
            第 @Model.Index 页，
        </span>
        <span>
            共 @Model.PageCount 页
        </span>
        @if (Model.HaveLast)
        {
            <span>
                <a href="~/home/index/@(Model.Index-1)">
                    上一页
                </a>
            </span>
        }
        @if (Model.HaveNext)
        {
            <span>
                <a href="~/home/index/@(Model.Index+1)">
                    下一页
                </a>
            </span>
        }
    </div>

</div>
